<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
"http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>

    <display-name>${project.build.finalName}</display-name>

    <context-param>
        <!-- The only significant configuration for Tapestry 5, this informs Tapestry
                        of where to look for pages, components, mixins and entities. -->
        <param-name>tapestry.app-package</param-name>
        <param-value>${tapestry.app-package}</param-value>
    </context-param>

    <context-param>
        <param-name>tapestry.production-mode</param-name>
        <param-value>${tapestry.production-mode}</param-value>
    </context-param>

    <context-param>
        <param-name>tapestry.compress-whitespace</param-name>
        <param-value>${tapestry.compress-whitespace}</param-value>
    </context-param>

    <context-param>
        <param-name>ck.google.key</param-name>
        <param-value>${ck.google.key}</param-value>
    </context-param>
    
    <filter>
        <filter-name>app</filter-name>
        <filter-class>org.apache.tapestry5.TapestryFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>app</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>
